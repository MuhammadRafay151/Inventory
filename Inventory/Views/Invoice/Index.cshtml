@model System.Data.DataSet
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mt-5">
    <div class="col">
        <table class="table  table-hover table-bordered">
            <thead class="thead-dark">
                <tr class="text-center align-middle">
                    <th>Date</th>
                    <th>Invoice Type</th>
                    <th>Location</th>
                    <th>Party</th>
                    <th>Total Amount</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach(System.Data.DataRow row in Model.Tables[0].Rows)
                {
                <tr class="text-center align-middle">
                    <td>@DateTime.Parse(row[1].ToString()).ToString("dd/MM/yyyy")</td>
                    <td>@row[2].ToString()</td>
                    <td>@row[3].ToString()</td>
                    <td>@row[4].ToString()</td>
                    <td>@row[5].ToString() Rs</td>
                    <td>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-raised">Details</button>
                            <button id="edt" class="btn btn-primary btn-raised">Edit</button>
                            <button class="btn btn-primary btn-raised">Delete</button>

                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

</div>
<script>
    $(document).ready(function () {
        $('#edt').click(function () {
            window.location.href=""
        })
    });
</script>

